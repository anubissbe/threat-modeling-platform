{
  "name": "@threat-modeling/cloud-native-service",
  "version": "1.0.0",
  "description": "Cloud-Native Architecture Migration Service for Threat Modeling Platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t threat-modeling/cloud-native:latest .",
    "docker:push": "docker push threat-modeling/cloud-native:latest",
    "helm:package": "helm package charts/cloud-native",
    "helm:install": "helm install cloud-native charts/cloud-native"
  },
  "keywords": [
    "threat-modeling",
    "cloud-native",
    "kubernetes",
    "docker",
    "microservices",
    "service-mesh",
    "container-orchestration",
    "cloud-migration"
  ],
  "author": "Threat Modeling Platform Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.7.0",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0",
    "zod": "^3.21.4",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "axios": "^1.4.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "eventemitter3": "^4.0.7",
    "@kubernetes/client-node": "^0.19.0",
    "dockerode": "^3.3.5",
    "js-yaml": "^4.1.0",
    "prom-client": "^14.2.0",
    "opentelemetry": "^0.1.0",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/instrumentation": "^0.39.1",
    "@opentelemetry/instrumentation-express": "^0.32.4",
    "@opentelemetry/instrumentation-http": "^0.39.1",
    "@opentelemetry/sdk-metrics": "^1.13.0",
