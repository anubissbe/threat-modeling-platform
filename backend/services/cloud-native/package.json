    "@types/compression": "^1.7.2",
    "@types/uuid": "^9.0.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^18.15.11",
    "@types/lodash": "^4.14.194",
    "@types/js-yaml": "^4.0.5",
    "@types/dockerode": "^3.3.19",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "typescript": "^5.0.2",
