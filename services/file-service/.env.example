# Server Configuration
NODE_ENV=development
PORT=3009
HOST=0.0.0.0

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/threatmodel_files

# Storage Configuration
STORAGE_PROVIDER=local  # local, s3, minio
STORAGE_PATH=./uploads

# S3/MinIO Configuration (when using S3 or MinIO)
S3_REGION=us-east-1
S3_BUCKET=threatmodel-files
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key
S3_ENDPOINT=http://localhost:9000  # For MinIO
S3_FORCE_PATH_STYLE=true  # For MinIO

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_FILES_PER_REQUEST=10
ALLOWED_MIME_TYPES=image/*,application/pdf,text/*,application/json,application/xml

# File Processing
ENABLE_IMAGE_PROCESSING=true
ENABLE_THUMBNAILS=true
THUMBNAIL_SIZES=150x150,300x300,600x600
IMAGE_QUALITY=85

# Security & Validation
ENABLE_VIRUS_SCAN=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Cleanup Settings
TEMP_FILE_TTL=86400000  # 24 hours in milliseconds
DELETED_FILE_RETENTION=2592000000  # 30 days in milliseconds

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000  # 1 minute in milliseconds

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
PROJECT_SERVICE_URL=http://localhost:3003

# User Quotas
DEFAULT_USER_QUOTA=1073741824  # 1GB in bytes
PREMIUM_USER_QUOTA=10737418240  # 10GB in bytes

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9099