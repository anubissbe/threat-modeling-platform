# Server Configuration
NODE_ENV=development
PORT=8082
HOST=0.0.0.0
SERVICE_NAME=project-service
SERVICE_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://threatmodel_user:threatmodel_dev_pass@localhost:5432/threatmodel_dev
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=5000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=threatmodel_redis_pass
REDIS_DB=2
REDIS_KEY_PREFIX=project:

# JWT Configuration (shared with auth-service)
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_ISSUER=threatmodel.io
JWT_AUDIENCE=threatmodel.io

# Service Communication
AUTH_SERVICE_URL=http://localhost:8080
USER_SERVICE_URL=http://localhost:8081
API_KEY=internal-service-api-key-change-in-production

# File Storage
STORAGE_TYPE=local
LOCAL_STORAGE_PATH=./uploads
AWS_S3_BUCKET=threatmodel-files
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Versioning
MAX_VERSIONS_PER_MODEL=50
VERSION_RETENTION_DAYS=365

# Collaboration
MAX_COLLABORATORS=20
REAL_TIME_SYNC_ENABLED=true

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9092

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://app.threatmodel.io
CORS_CREDENTIALS=true

# Webhook Configuration
WEBHOOK_SECRET=webhook-secret-change-in-production
WEBHOOK_MAX_RETRIES=3

# External Integrations
JIRA_ENABLED=false
JIRA_BASE_URL=
JIRA_USERNAME=
JIRA_API_TOKEN=

GITHUB_ENABLED=false
GITHUB_TOKEN=

# Vault Configuration (for production)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
VAULT_PATH=secret/project-service