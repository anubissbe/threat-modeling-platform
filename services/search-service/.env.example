# Server Configuration
NODE_ENV=development
PORT=3010
HOST=0.0.0.0

# Security
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-32-characters-long
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_CA_CERT=
ELASTICSEARCH_REJECT_UNAUTHORIZED=true

# Index Configuration
INDEX_PREFIX=threatmodel
INDEX_REPLICAS=1
INDEX_SHARDS=1
INDEX_REFRESH_INTERVAL=1s

# Search Configuration
SEARCH_DEFAULT_SIZE=20
SEARCH_MAX_SIZE=1000
SEARCH_HIGHLIGHT_FRAGMENT_SIZE=150
SEARCH_SUGGESTION_SIZE=10
SEARCH_TIMEOUT=30000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_INDEX_PREFIX=search_analytics

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
PROJECT_SERVICE_URL=http://localhost:3003
FILE_SERVICE_URL=http://localhost:3009

# Indexing Configuration
BULK_INDEX_SIZE=1000
REINDEX_BATCH_SIZE=100
INDEXING_RETRY_ATTEMPTS=3
INDEXING_RETRY_DELAY=1000

# Real-time Indexing
ENABLE_REAL_TIME_INDEXING=true
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PREFIX=threatmodel

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9100