# Server Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
SERVICE_NAME=auth-service
SERVICE_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://threatmodel_user:threatmodel_dev_pass@localhost:5432/threatmodel_dev
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=5000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=threatmodel_redis_pass
REDIS_DB=0
REDIS_KEY_PREFIX=auth:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_TTL=7d
JWT_ISSUER=threatmodel.io
JWT_AUDIENCE=threatmodel.io

# Password Configuration
PASSWORD_PEPPER=your-password-pepper-here-change-in-production
ARGON2_MEMORY_COST=65536
ARGON2_TIME_COST=3
ARGON2_PARALLELISM=4

# MFA Configuration
MFA_ISSUER=ThreatModel.io
MFA_BACKUP_CODES_COUNT=10
TOTP_WINDOW=1
TOTP_STEP=30

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=24h
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=15m
PASSWORD_RESET_TTL=1h

# External Services
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@threatmodel.io

SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://app.threatmodel.io
CORS_CREDENTIALS=true

# Vault Configuration (for production)
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=
VAULT_PATH=secret/auth-service