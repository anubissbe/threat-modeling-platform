{
  "name": "@threatmodel/report-service",
  "version": "1.0.0",
  "description": "Report generation service for threat modeling application",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^6.12.0",
    "puppeteer": "^21.5.2",
    "pdfkit": "^0.14.0",
    "handlebars": "^4.7.8",
    "chart.js": "^3.9.1",
    "chartjs-node-canvas": "^4.1.6",
    "node-html-pdf": "^3.0.0",
    "html-pdf-chrome": "^1.10.0",
    "ejs": "^3.1.9",
    "marked": "^10.0.0",
    "highlight.js": "^11.9.0",
    "qrcode": "^1.5.3",
    "archiver": "^6.0.1",
    "bullmq": "^4.14.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.11",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/pdfkit": "^0.13.2",
    "@types/ejs": "^3.1.5",
    "@types/qrcode": "^1.5.5",
    "@types/archiver": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/marked": "^5.0.2",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.15"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "testMatch": ["**/__tests__/**/*.test.ts", "**/tests/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "report",
    "pdf",
    "html",
    "threat-modeling",
    "fastify",
    "typescript"
  ],
  "author": "Threat Modeling Team",
  "license": "MIT"
}