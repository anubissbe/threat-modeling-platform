{
  "name": "@threatmodel/notification-service",
  "version": "1.0.0",
  "description": "Notification service for threat modeling application",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "nodemailer": "^6.9.7",
    "@sendgrid/mail": "^8.1.0",
    "twilio": "^4.19.0",
    "@slack/webhook": "^7.0.1",
    "axios": "^1.6.2",
    "bullmq": "^4.14.0",
    "handlebars": "^4.7.8",
    "mjml": "^4.14.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "zod": "^3.22.4",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21",
    "html-to-text": "^9.0.5",
    "juice": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/mjml": "^4.7.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/html-to-text": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.15"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
    "testMatch": ["**/__tests__/**/*.test.ts", "**/tests/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "notification",
    "email",
    "webhook",
    "sms",
    "slack",
    "threat-modeling",
    "fastify",
    "typescript"
  ],
  "author": "Threat Modeling Team",
  "license": "MIT"
}