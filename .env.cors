# CORS Configuration for Threat Modeling Platform
# Copy these to your main .env file and adjust as needed

# Development CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3006,http://localhost:5173,http://localhost:5174,http://192.168.1.24:3000,http://192.168.1.24:3006,http://192.168.1.24:5174

# Alternative environment variable name (for backward compatibility)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3006,http://localhost:5173,http://localhost:5174,http://192.168.1.24:3000,http://192.168.1.24:3006,http://192.168.1.24:5174

# Development mode (allows all localhost origins)
CORS_DEV_MODE=true

# Production CORS Origins (uncomment and modify for production)
# CORS_ORIGINS=https://threatmodel.company.com,https://api.threatmodel.company.com

# Session secret for CORS cookies
SESSION_SECRET=your-session-secret-change-in-production

# Environment
NODE_ENV=development